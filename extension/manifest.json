{
  "manifest_version": 3,
  "name": "CartGenie",
  "version": "1.0.0",
  "description": "An intelligent shopping co-pilot to help you maximize savings on your online purchases.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.walmart.com/*",
    "*://*.target.com/*",
    "*://*.amazon.in/*",
    "*://*.flipkart.com/*",
    "*://*.bigbasket.com/*",
    "*://*.swiggy.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/gp/cart/*",
        "*://*.amazon.com/cart/*",
        "*://*.amazon.in/gp/cart/*",
        "*://*.amazon.in/cart/*",
        "*://*.walmart.com/cart/*",
        "*://*.target.com/cart/*",
        "*://*.flipkart.com/viewcart*",
        "*://*.bigbasket.com/basket/*",
        "*://*.swiggy.com/instamart/checkout/cart*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}